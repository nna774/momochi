AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: >
  momochi
  
  Sample SAM Template for momochi

# More info about Globals: https://github.com/awslabs/serverless-application-model/blob/master/docs/globals.rst
Globals:
  Function:
    Timeout: 5

Resources:
  ApiGateway:
    Name: momochi
    Type: AWS::Serverless::Api
    Properties:
      StageName: Prod
      Domain:
        CertificateArn: arn:aws:acm:ap-northeast-1:486414336274:certificate/5b205c4d-aec3-4ee1-b5e5-3b338026dcf4
        DomainName: momochi.dark-kuins.net
      EndpointConfiguration:
  Function:
    Type: AWS::Serverless::Function # More info about Function Resource: https://github.com/awslabs/serverless-application-model/blob/master/versions/2016-10-31.md#awsserverlessfunction
    Properties:
      Handler: momochi
      Runtime: go1.x
      Tracing: Active # https://docs.aws.amazon.com/lambda/latest/dg/lambda-x-ray.html
      Events:
        Root:
          Type: Api
          Properties:
            RestApiId: !Ref ApiGateway
            Path: /
            Method: any
        CatchAll:
          Type: Api
          Properties:
            RestApiId: !Ref ApiGateway
            Path: /{proxy+}
            Method: any
      Policies:
        - DynamoDBCrudPolicy:
           TableName: home-atmosphere
        - DynamoDBCrudPolicy:
           TableName: home-atmosphere-temp
        - DynamoDBCrudPolicy:
           TableName: home-atmosphere-mgmt
      Environment: # More info about Env Vars: https://github.com/awslabs/serverless-application-model/blob/master/versions/2016-10-31.md#environment-object
        Variables:
          HOST_ID: xxx
          API_KEY: xxx
          DYNAMODB_ENDPOINT: ""
          DYNAMODB_TABLE: home-atmosphere
          DYNAMODB_TEMP_TABLE: home-atmosphere-temp
          DYNAMODB_MGMT_TABLE: home-atmosphere-mgmt
Outputs:
  API:
    Value: !Sub "https://${ApiGateway}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
  Function:
    Value: !GetAtt Function.Arn
  FunctionIamRole:
    Value: !GetAtt FunctionRole.Arn
